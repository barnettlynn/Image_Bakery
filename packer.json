{
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "us-east-1",
        "vpc_filter": {
          "filters": {
            "tag:Name": "Boiler-VPC",
            "isDefault": "false",
            "cidr": "/16"
          }
        },
        "subnet_filter": {
          "filters": {
            "tag:Name": "build",
            "tag:Type":  "public"
          },
          "most_free": true,
          "random": false
        },
        "user_data_file": "./user-data.txt",
        "source_ami": "ami-0bcc094591f354be2",
        "instance_type": "t3.small",
        "ssh_username": "ubuntu",
        "ami_name": "bakery-example {{timestamp}}",
        "tags": {
          "Name":"BooksApp"
        }
      }
    ],
    "provisioners": [
        {
          "type": "file",
          "source": "./",
          "destination": "/home/ubuntu"
        },
        {
            "type": "file",
            "source": "./setup.sh",
            "destination": "/home/ubuntu/"
        },
        {
          "type": "shell",
          "inline": ["curl -sL https://deb.nodesource.com/setup_14.x | sudo -E bash -", "sudo apt-get install -y nodejs", "node -v"]
        }
    ]
  }